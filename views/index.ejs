<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PDF Digital Signature</title>
    <meta name="title" content="PDF Digital Signature" />
    <meta name="description" content="" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="public/index.min.css">
    <script src="public/index.min.js" defer></script>
</head>

<body>
    <nav>
        <p>PDF Digital Signature</p>
        <a href="https://github.com/NaufalK25/pdf-digital-signature" target="_blank" rel="noopener noreferrer" class="nav-icon" title="NaufalK25/pdf-digital-signature">
            <%- include('../public/svg/github.svg') %>
        </a>
    </nav>

    <% if (flash.type.length > 0) { %>
    <div class="alert alert-<%= flash.type %> alert-dismissible fade show" role="alert">
        <%= flash.message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

    <main class="mb-5 container d-flex flex-column justify-content-center align-items-center">
        <div class="uploads_container">
            <form action="/uploads" method="POST" enctype="multipart/form-data">
                <div class="input-group custom-file">
                    <input type="file" name="files" accept=".pdf" class="form-control" id="uploadFile" aria-describedby="uploadFileAddon" aria-label="Upload" multiple required>
                    <button class="btn btn-primary" type="submit" id="uploadFileAddon">
                        <span>Upload</span>
                    </button>
                </div>
            </form>
        </div>


        <form action="/delete-all?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-outline-danger" title="Delete All" <%= !pdfs.length > 0 && 'disabled'  %>>
                <span>Delete All</span>
            </button>
        </form>

        <% if (pdfs.length > 0) { %>
        <div>
            <table class="table table-responsive align-middle">
                <thead>
                    <tr>
                        <th class="text-center">Name</th>
                        <th colspan="4" class="text-center">Action</th>
                    </tr>
                </thead>

                <tbody>
                    <% pdfs.forEach((pdf, idx) => { %>
                    <tr>
                        <td>
                            <a href="<%= pdf.url %>" target="_blank" rel="noopener noreferrer" title="<%= pdf.name %>"><%= pdf.name %></a>
                            <% if (pdf.isHashed) { %>
                            <div>
                                <span class="text-small">Public Key: <%= pdf.publicKey || '-' %></span>
                            </div>
                            <% } %>
                            <div class="<%= !pdf.isEncrypted && 'visually-hidden' %>">
                                <span class="badge text-bg-success">Encrypted</span>
                            </div>

                            <div class="<%= !pdf.isHashed && 'visually-hidden' %>">
                                <span class="badge text-bg-warning">Hashed</span>
                            </div>

                        </td>

                        <td>
                            <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#preview<%= idx %>">
                                Preview
                            </button>

                            <div class="modal fade" id="preview<%= idx %>" tabindex="-1" aria-labelledby="preview<%= idx %>Label" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="preview<%= idx %>Label">Preview for <%= pdf.name %></h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>

                                        <div class="modal-body">
                                            <iframe src="<%= pdf.url %>" frameborder="0" width="100%" height="500px"></iframe>
                                        </div>

                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                                            <a href="<%= pdf.url %>" class="btn btn-success text-decoration-none" download>Download</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>

                        <td>
                            <% if (!pdf.isEncrypted) { %>
                            <form action="/encrypt" method="POST">
                                <input type="hidden" name="encrypted_file" value="<%= pdf.name %>">
                                <button type="submit" class="btn btn-outline-success" title="Encrypt" <%= pdf.isHashed && 'disabled' %>>
                                    <span>Encrypt</span>
                                </button>
                            </form>
                            <% } %>

                            <% if (pdf.isEncrypted) { %>
                            <form action="/decrypt" method="POST">
                                <input type="hidden" name="decrypted_file" value="<%= pdf.name %>">
                                <button type="submit" class="btn btn-outline-success" title="Decrypt" <%= pdf.isHashed && 'disabled' %>>
                                    <span>Decrypt</span>
                                </button>
                            </form>
                            <% } %>
                        </td>

                        <td>
                            <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#hash<%= idx %>" <%= pdf.isHashed && 'disabled' %>>
                                Hash
                            </button>

                            <div class="modal fade" id="hash<%= idx %>" tabindex="-1" aria-labelledby="hash<%= idx %>Label" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="hash<%= idx %>Label">Hash for <%= pdf.name %></h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>

                                        <form action="/hash" method="POST">
                                            <input type="hidden" name="hashed_file" value="<%= pdf.name %>">

                                            <div class="p-2 d-flex flex-column hash-input-group">
                                                <label for="public_key<%= pdf.name %>" class="form-label pointer">Public Key</label>
                                                <input type="text" class="form-control" name="public_key" id="public_key<%= pdf.name %>" minlength="1" maxlength="32" required>
                                                <p class="text-small text-secondary">Note: Public Key must be 1-32 characters long.</p>
                                            </div>

                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-outline-warning" title="Hash">
                                                    <span>Hash</span>
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </td>

                        <td>
                            <form action="/delete?_method=DELETE" method="POST">
                                <input type="hidden" name="deleted_file" value="<%= pdf.name %>">
                                <button type="submit" class="btn btn-outline-danger" title="Delete">
                                    <span>Delete</span>
                                </button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <% } %>

        <div>
            <h4 class="text-center">Compare PDF Hashes</h4>
            <p class="text-small text-center text-secondary">*Need at least 2 hashed PDFs to compare.</p>
            <form action="/compare-hash" method="POST" class="d-flex compare-pdf-form">
                <select class="form-select" name="file1" <%= pdfs.filter(pdf => pdf.isHashed).length < 2 && 'disabled' %>>
                    <option selected disabled>No PDF Selected</option>
                    <% pdfs.forEach(pdf => { %>
                    <% if (pdf.isHashed) { %>
                    <option value="<%= pdf.name %>"><%= pdf.name %></option>
                    <% } %>
                    <% }) %>
                </select>

                <select class="form-select" name="file2" <%= pdfs.filter(pdf => pdf.isHashed).length < 2 && 'disabled' %>>
                    <option selected disabled>No PDF Selected</option>
                    <% pdfs.forEach(pdf => { %>
                    <% if (pdf.isHashed) { %>
                    <option value="<%= pdf.name %>"><%= pdf.name %></option>
                    <% } %>
                    <% }) %>
                </select>

                <button class="btn btn-outline-info" <%= pdfs.filter(pdf => pdf.isHashed).length < 2 && 'disabled' %>>Compare</button>
            </form>
        </div>

    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>

</html>
